# Database
DATABASE_URL=./database.sqlite
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=24h

# Server
PORT=3001
HOST=localhost

# CORS
FRONTEND_URL=http://localhost:5173

# File uploads
MAX_FILE_SIZE=5MB
UPLOAD_DIR=uploads

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Websocket
WS_PORT=3002

# Logging
LOG_LEVEL=info